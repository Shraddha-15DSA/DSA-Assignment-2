#include <iostream>
using namespace std;

int main() {
    int n;

    cout << "Enter the number of rows ";
    cin >> n;

    for(int i=1;i<n;i++){
for(int j=n;j>i;j--)
{
    cout<<" ";
}
cout<<"*";
for(int k=1;k<2*(i-1);k++){
    cout<<" ";
}
if(i==1){
    cout<<"\n";
}
else{
    cout<<"*\n";
}
    }
    for(int i=n-1;i>=1;i--){
for(int j=n;j>i;j--)
{
    cout<<" ";
}
cout<<"*";
for(int k=1;k<2*(i-1);k++){
    cout<<" ";
}
if(i==1){
    cout<<"\n";
}
else{
    cout<<"*\n";
}
    }
    
    return 0;
}
